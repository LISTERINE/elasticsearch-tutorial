GET /test/book/_search?pretty
{
    "size" : 0,
    "aggs" : {
        "category" : {
            "terms" : {
                "field" : "category"
            }
        }
    }
}

# Another fun one to play with:
GET /test/book/_search?pretty
{
    "query": {
        "match": {"title": "Python"}
    },
    "aggs": {
        "most_pages": {
            "max": {"field": "pages"}
        }
    }
}